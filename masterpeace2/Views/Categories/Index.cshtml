@model IEnumerable<masterpeace2.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminDash.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Category_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Category_Image)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Discription)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category_Name)
                                </td>
                                <td>
                                    <img src="~/photos for masterpeace/@item.Category_Image" alt="@item.Category_Image" width="150" />
                                    @*@Html.DisplayFor(modelItem => item.Category_Image)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Discription)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
