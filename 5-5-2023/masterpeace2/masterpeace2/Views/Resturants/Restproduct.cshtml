
@model IEnumerable<masterpeace2.Product>
@{
    ViewBag.Title = "resproduct";
    Layout = "~/Views/Shared/_LayoutRestDash.cshtml";
}

@{
    ViewBag.Title = "Index";
}


@*<h2>resproduct</h2>*@

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Name
                                @*@Html.DisplayNameFor(model => model.Product_Name)*@
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                Image
                                @*@Html.DisplayNameFor(model => model.Image1)*@
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.Image2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image3)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image4)
                            </th>*@
                        <th>
                            Category
                            @*@Html.DisplayNameFor(model => model.Category.Category_Name)*@
                        </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Resturant.Name)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    <img src="~/photos for masterpeace/@item.Image1" alt="@item.Image1" width="150" />
                                </td>
                                @*<td>
                                    <img src="~/photos for masterpeace/@item.Image2" alt="@item.Image2" width="150" />
                                </td>
                                <td>
                                    <img src="~/photos for masterpeace/@item.Image3" alt="@item.Image3" width="150" />
                                </td>
                                <td>
                                    <img src="~/photos for masterpeace/@item.Image4" alt="@item.Image4" width="150" />
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Category_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Resturant.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


