@model IEnumerable<masterpeace2.Product>
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="app-content">

    <!--====== Section 1 ======-->
    <div class="u-s-p-y-90">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-12">
                    <div class="shop-p">
                        <div class="shop-p__toolbar u-s-m-b-30">
                            <div class="shop-p__meta-wrap u-s-m-b-60">

                                <span class="shop-p__meta-text-1">Resturant Name</span>
                                <div class="shop-p__meta-text-2">

                                    <span>Related Searches:</span>

                                    <a class="gl-tag btn--e-brand-shadow" href="#">Resturant1</a>

                                    <a class="gl-tag btn--e-brand-shadow" href="#">Resturant2</a>

                                    <a class="gl-tag btn--e-brand-shadow" href="#">Resturant3</a>
                                </div>
                            </div>
                            <div class="shop-p__tool-style">
                                <div class="tool-style__group u-s-m-b-8">

                                    <span class="js-shop-grid-target">Grid</span>

                                    <span class="js-shop-list-target is-active">List</span>
                                </div>
                                <form>
                                    <div class="tool-style__form-wrap">
                                        <div class="u-s-m-b-8">
                                            <select class="select-box select-box--transparent-b-2">
                                                <option>Show: 8</option>
                                                <option selected>Show: 12</option>
                                                <option>Show: 16</option>
                                                <option>Show: 28</option>
                                            </select>
                                        </div>
                                        <div class="u-s-m-b-8">
                                            <select class="select-box select-box--transparent-b-2">
                                                <option selected>Sort By: Newest Items</option>
                                                <option>Sort By: Latest Items</option>
                                                <option>Sort By: Best Selling</option>
                                                <option>Sort By: Best Rating</option>
                                                <option>Sort By: Lowest Price</option>
                                                <option>Sort By: Highest Price</option>
                                            </select>
                                        </div>
                                        <div class="u-s-m-b-8">
                                            @using (Html.BeginForm("Searchacc", "Products"))
                                            {
                                                <div class="title_right">
                                                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" name="search" id="search" placeholder="Search for...">
                                                            <span class="input-group-btn">
                                                                <button class="btn btn-default" type="submit">Go!</button>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="shop-p__collection">
                            <div class="row is-list-active">

                                @foreach (var item in Model)

                                {

                                    <div class="col-lg-4 col-md-6 col-sm-6">
                                        <div class="product-m">
                                            <div class="product-m__thumb">

                                                <a class="aspect aspect--bg-grey aspect--square u-d-block" href="product-detail.html">

                                                    <img class="aspect__img" width="150" src="~/photos for masterpeace/@Html.DisplayFor(modelItem => item.Image1)" alt="">
                                                </a>
                                                <div class="product-m__quick-look">

                                                    <a class="fas fa-search" data-modal="modal" data-modal-id="#quick-look" data-tooltip="tooltip" data-placement="top" title="Quick Look"></a>
                                                </div>
                                                <div class="product-m__add-cart">

                                                    <a class="btn--e-brand" data-modal="modal" data-modal-id="#add-to-cart">Add to Cart</a>
                                                </div>
                                            </div>
                                            <div class="product-m__content">
                                                <div class="product-m__category">

                                                    <a href="shop-side-version-2.html">@Html.DisplayFor(modelItem => item.Category.Category_Name)</a>
                                                </div>
                                                <div class="product-m__name">

                                                    <a href="product-detail.html">@Html.DisplayFor(modelItem => item.Product_Name)</a>
                                                </div>
                                                <div class="product-m__rating gl-rating-style">
                                                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i><i class="far fa-star"></i><i class="far fa-star"></i>

                                                    <span class="product-m__review">(23)</span>
                                                </div>
                                                <div class="product-m__price">@Html.DisplayFor(modelItem => item.Price) $</div>
                                                <div class="product-m__hover">
                                                    <div class="product-m__preview-description">

                                                        <span>@Html.DisplayFor(c => item.Category.Discription)</span>
                                                    </div>
                                                    <div class="product-m__wishlist">

                                                        <a class="far fa-heart" href="#" data-tooltip="tooltip" data-placement="top" title="Add to Wishlist"></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }







                                @*@Html.Action("SingleItem");*@

                            </div>
                        </div>
                        <div class="u-s-p-y-60">

                            <!--====== Pagination ======-->
                            <ul class="shop-p__pagination">
                                <li class="is-active">

                                    <a href="shop-list-left.html">1</a>
                                </li>
                                <li>

                                    <a href="shop-list-left.html">2</a>
                                </li>
                                <li>

                                    <a href="shop-list-left.html">3</a>
                                </li>
                                <li>

                                    <a href="shop-list-left.html">4</a>
                                </li>
                                <li>

                                    <a class="fas fa-angle-right" href="shop-list-left.html"></a>
                                </li>
                            </ul>
                            <!--====== End - Pagination ======-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section 1 ======-->
</div>
<!--====== End - App Content ======-->
